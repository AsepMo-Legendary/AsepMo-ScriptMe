    <style name="Analytics.Theme.Widget"/>

    <style name="Analytics.Theme.Widget.TextView" parent="android:Widget.Holo.Light.TextView">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/Oswald-Stencbab.ttf</item>
    </style>

    <style name="Analytics.Theme.Widget.TextView.Style">
        <item name="fontPath">fonts/Oswald-Stencbab.ttf</item>
    </style>

    <style name="Analytics.Theme.Widget.TextViewAppearanceStyle" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textAppearance">@style/TextAppearance.FontPath</item>
    </style>

    <!-- Custom Class Styles -->
    <style name="Analytics.Theme.Widget.TextField" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">fonts/gtw.ttf</item>
        <item name="android:textSize">@dimen/abc_text_size_small_material</item>
    </style>
	
    <style name="TextViewNoStyleParent">
        <item name="android:textColor">@android:color/holo_blue_dark</item>
        <item name="fontPath">fonts/gtw.ttf</item>
    </style>

    <style name="TextAppearance"/>

    <style name="TextAppearance.FontPath" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/Oswald-Stencbab.ttf</item>
        <item name="android:textColor">#444</item>
    </style>

    <style name="TextAppearance.FontPathView" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/Oswald-Stencbab.ttf</item>
        <item name="android:textColor">#444</item>
    </style>
	
    <style name="Analytics.Theme.Permission" />

    <style name="Analytics.Theme.Permission.Activity" parent="@android:style/Theme.Material.Light.Dialog.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="Analytics.Theme.Permission.Activity.Transparent">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Analytics.Theme.Permission.Dialog" parent="android:Theme.Holo.Dialog.NoActionBar" />

    <style name="Analytics.Theme.Permission.Dialog.Wait">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@drawable/engine_shape_wait_background</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <style name="Analytics.Theme.Permission.Dialog.Transparent">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Analytics.Theme.Permission.Widget" />

    <style name="Analytics.Theme.Permission.Widget.Progress" parent="@android:style/Widget.Holo.ProgressBar" />

    <style name="Analytics.Theme.Permission.Widget.Progress.Wait">
        <item name="android:indeterminateOnly">true</item>
    </style>

    <style name="Analytics.Theme.Permission.WrapContent">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="Analytics.Theme.Permission.MatchParent">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>
	<!--DIALOG THEME-->
    <style name="AlertDialog_Light" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/engine_light_color_icons</item><!--BOTTONI-->
        <item name="android:textColorPrimary">@color/engine_light_color_text</item><!--TESTO-->
    </style>

    <style name="AlertDialog_Dark" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/engine_dark_color_icons</item><!--BOTTONI-->
        <item name="android:textColorPrimary">@color/engine_dark_color_text</item><!--TESTO-->
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/cardview_dark_background</item>
    </style>

    <style name="AlertDialog_Dark_Amoled" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/engine_black_color_icons</item><!--BOTTONI-->
        <item name="android:textColorPrimary">@color/engine_black_color_text</item><!--TESTO-->
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/engine_color_black</item>
        <item name="android:windowBackground">@color/engine_color_black</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <!--LICENSE DIALOG-->
    <style name="LicenseDialog_Dark" parent="android:Theme.Dialog">
        <item name="android:textColor">@color/engine_color_white</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/cardview_dark_background</item>
        <item name="colorAccent">@color/engine_dark_color_icons</item><!--BOTTONI-->
    </style>

    
	<style name="TextAppearance.MaterialCompat"/>
	<style name="TextAppearance.MaterialCompat.Body1">
		<item name="android:textSize">14sp</item>
		<item name="android:fontFamily">sans-serif</item>
		<item name="android:textColor">?android:attr/textColorPrimary</item>
	</style>
	<style name="TextAppearance.MaterialCompat.Body2">
		<item name="android:textSize">18sp</item>
