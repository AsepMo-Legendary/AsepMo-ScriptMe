<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
	<style name="Analytics.Theme.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation" tools:ignore="NewApi">5dp</item>
        <item name="theme">@style/Analytics.Theme.ToolbarStyle</item>

    </style>
	
	  <style name="Analytics.Theme.ToolbarStyle" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">#FFF</item>
        <item name="colorControlNormal">#FFF</item>
        <item name="colorControlHighlight">#FFF</item>
    </style>

	<!-- make the title in action bar always be white-->
    <style name="Analytics.Theme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <!-- AppTheme ActionBar Style -->
    <style name="Analytics.Theme.ActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:titleTextStyle">@style/Analytics.Theme.ActionBar.TextAppearance</item>
        <item name="android:subtitleTextStyle">@style/Analytics.Theme.ActionBar.TextAppearance.SubTitle</item>
    </style>

    <style name="Analytics.Theme.ActionBar.TextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="fontPath">fonts/Oswald-Stencbab.ttf</item>
    </style>

    <style name="Analytics.Theme.ActionBar.TextAppearance.SubTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Subtitle.Inverse">
        <item name="fontPath">fonts/gtw.ttf</item>
    </style>

    <!-- style the overflow menu -->
    <style name="Analytics.Theme.PopupMenu.Light" parent="Widget.AppCompat.Light.PopupMenu">
        <item name="android:popupBackground">@color/engine_light_color_background</item>
    </style>
	<!--LIGHT MENU THEME-->
	<style name="LightActionBarMenu" parent="Theme.AppCompat.Light">
        <item name="android:popupMenuStyle">@style/Analytics.Theme.ListPopupWindow.Light</item>
    </style>
	
	<style name="Analytics.Theme.ListPopupWindow.Light" parent="Widget.AppCompat.Light.ListPopupWindow">
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/cardview_light_background</item>
    </style>
	
	<style name="Analytics.Theme.DrawerArrow.Light" parent="Widget.AppCompat.DrawerArrowToggle">
		<item name="spinBars">true</item>
		<item name="color">@color/engine_light_color_icons</item>
	</style>

	<!-- Style for AlertDialogs -->
	<style name="Analytics.Theme.AlertDialog.Light" parent="Theme.AppCompat.Dialog.Alert">
		<item name="colorAccent">@color/engine_light_color_accent</item>
		<item name="android:textColorPrimary">@color/engine_light_color_textPrimary</item>
		<item name="android:background">@color/engine_light_color_background</item>
	</style>
	
    <!-- style the overflow menu -->
    <style name="Analytics.Theme.PopupMenu.Dark" parent="Widget.AppCompat.Light.PopupMenu">
        <item name="android:popupBackground">@color/engine_dark_color_background</item>
    </style>
	
	<!--DARK MENU THEME-->
    <style name="DarkActionBarMenu" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:popupMenuStyle">@style/Analytics.Theme.ListPopupWindow.Dark</item>
    </style>

    <style name="Analytics.Theme.ListPopupWindow.Dark" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/cardview_dark_background</item>
    </style>
	
	<style name="Analytics.Theme.DrawerArrow.Dark" parent="Widget.AppCompat.DrawerArrowToggle">
		<item name="spinBars">true</item>
		<item name="color">@color/engine_dark_color_icons</item>
	</style>

	<!-- Style for AlertDialogs -->
	<style name="Analytics.Theme.AlertDialog.Dark" parent="Theme.AppCompat.Dialog.Alert">
		<item name="colorAccent">@color/engine_dark_color_accent</item>
		<item name="android:textColorPrimary">@color/engine_dark_color_textPrimary</item>
		<item name="android:background">@color/engine_dark_color_background</item>
	</style>
	
	<!-- style the overflow menu -->
    <style name="Analytics.Theme.PopupMenu.Black" parent="Widget.AppCompat.Light.PopupMenu">
        <item name="android:popupBackground">@color/engine_black_color_background</item>
    </style>
	
	<!--AMOLED DARK MENU THEME-->
    <style name="AmoledDarkActionBarMenu" parent="Base.ThemeOverlay.AppCompat.ActionBar">
        <item name="android:popupMenuStyle">@style/Analytics.Theme.ListPopupWindow.Black</item>
    </style>

    <style name="Analytics.Theme.ListPopupWindow.Black" parent="Base.ThemeOverlay.AppCompat.ActionBar">
        <item name="android:popupBackground">@drawable/engine_empty_amoled</item>
    </style>
	
	<style name="Analytics.Theme.DrawerArrow.Black" parent="Widget.AppCompat.DrawerArrowToggle">
		<item name="spinBars">true</item>
		<item name="color">@color/engine_black_color_icons</item>
	</style>

	<!-- Style for AlertDialogs -->
	<style name="Analytics.Theme.AlertDialog.Black" parent="Theme.AppCompat.Dialog.Alert">
		<item name="colorAccent">@color/engine_black_color_accent</item>
